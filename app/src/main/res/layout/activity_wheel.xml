<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F4F8FF"
    tools:context=".ui.WheelActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="دولاب الحظ"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#0B2D5C"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardWheel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="#D6E4FF"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اضغط (Spin) لتجربة حظك"
                android:textSize="14sp"
                android:textColor="#466B9A"/>

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0"
                android:textSize="44sp"
                android:textStyle="bold"
                android:textColor="#1E6BFF"
                android:layout_marginTop="14dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSpin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="18dp"
                android:text="Spin"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="16dp"
                app:backgroundTint="#1E6BFF"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="رجوع"
        android:textStyle="bold"
        android:textColor="#1E6BFF"
        android:layout_marginTop="18dp"
        app:cornerRadius="16dp"
        app:strokeWidth="2dp"
        app:strokeColor="#1E6BFF"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/cardWheel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
