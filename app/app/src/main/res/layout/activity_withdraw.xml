
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootWithdraw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    android:background="#F4F8FF"
    tools:context=".ui.WithdrawActivity">

    <!-- Header -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="#D6E4FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سحب الأرباح"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#0B2D5C"/>

            <TextView
                android:id="@+id/tvSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="كل 1000 نقطة = 1$"
                android:textSize="14sp"
                android:textColor="#466B9A"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Method Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMethod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="#D6E4FF"
        app:layout_constraintTop_toBottomOf="@id/cardHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="طريقة السحب"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#0B2D5C"/>

            <Spinner
                android:id="@+id/spMethod"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@android:drawable/btn_dropdown"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Account Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="#D6E4FF"
        app:layout_constraintTop_toBottomOf="@id/cardMethod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رقم الحساب / الايدي"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#0B2D5C"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxStrokeColor="#1E6BFF"
                app:hintTextColor="#1E6BFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="اكتب رقم زين كاش أو PUBG ID أو Gmail"
                    android:inputType="text"
                    android:textColor="#0B2D5C"
                    android:textSize="14sp"
                    android:padding="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Info -->
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="ملاحظة: سيتم خصم 1000 نقطة عند إرسال طلب السحب."
        android:textSize="13sp"
        android:textColor="#466B9A"
        app:layout_constraintTop_toBottomOf="@id/cardAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Send Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSend"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="إرسال طلب السحب"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        app:cornerRadius="16dp"
        app:backgroundTint="#1E6BFF"
        app:layout_constraintTop_toBottomOf="@id/tvInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom Space -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnSend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
