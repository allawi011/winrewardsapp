<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F4F8FF"
    tools:context=".ui.InviteActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="دعوة صديق"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#0B2D5C"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- My code card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMyCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="#D6E4FF"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="كود الدعوة الخاص بك"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#0B2D5C"/>

            <TextView
                android:id="@+id/tvMyCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="------"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#1E6BFF"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="14dp"
                android:text="مشاركة الكود"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="16dp"
                app:backgroundTint="#1E6BFF"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Apply code card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardApply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="#D6E4FF"
        app:layout_constraintTop_toBottomOf="@id/cardMyCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أدخل كود دعوة للحصول على 100 نقطة"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#0B2D5C"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxStrokeColor="#1E6BFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etInviteCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="مثال: A1B2C3"
                    android:inputType="textCapCharacters"
                    android:textColor="#0B2D5C"
                    android:padding="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApplyCode"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="14dp"
                android:text="تطبيق كود الدعوة"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="16dp"
                app:backgroundTint="#0B2D5C"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Back button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="رجوع"
        android:textStyle="bold"
        android:textColor="#1E6BFF"
        android:layout_marginTop="18dp"
        app:cornerRadius="16dp"
        app:strokeWidth="2dp"
        app:strokeColor="#1E6BFF"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/cardApply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
