<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Internet for Firebase + AdMob -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:label="Get Money"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GetMoney">

        <!-- AdMob App ID -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5117598639994532~3945737293" />

        <!-- Splash (Launcher) -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login / Auth -->
        <!-- ملاحظة: اذا انت مسميه LoginActivity احذف AuthActivity وخلي LoginActivity -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="false" />

        <!-- Main -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false" />

<activity android:name=".ui.RegisterActivity" />

        
        <!-- Wheel -->
        <activity
            android:name=".ui.WheelActivity"
            android:exported="false" />

        <!-- Invite -->
        <activity
            android:name=".ui.InviteActivity"
            android:exported="false" />

        <!-- Daily Reward -->
        <activity
            android:name=".ui.DailyRewardActivity"
            android:exported="false" />

        <!-- Profile -->
        <activity
            android:name=".ui.ProfileActivity"
            android:exported="false" />

        <!-- Withdraw -->
        <activity
            android:name=".ui.WithdrawActivity"
            android:exported="false" />

    </application>

</manifest>
